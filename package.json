{
  "name": "kungbib-styleguide",
  "version": "2.0.0",
  "description": "Guidelines for quickly setting up UI in apps and services at the National Library of Sweden.",
  "main": "index.js",
  "repository": "git@github.com:Kungbib/styleguide.git",
  "author": "Ola Blissing <ola.blissing@gmail.com>",
  "contributors": [
    "Mattias Bolin <bolin.mattias@gmail.com>"
  ],
  "license": "Apache-2.0",
  "scripts": {
    "serve": "mkdocs serve",
    "postinstall": "yarn run clear_assets && yarn run copy_styles && yarn run copy_assets",
    "clear_assets": "rm -rf ./custom_theme/assets",
    "copy_styles": "cp ./node_modules/kungbib-styles/lib/css/theme.css ./custom_theme/css/",
    "copy_assets": "cp -r ./node_modules/kungbib-styles/lib/assets/ ./custom_theme/assets",
    "build": "mkdocs build",
    "deploy": "./deploy.sh"
  },
  "dependencies": {
    "kungbib-styles": "Kungbib/styles"
  }
}
